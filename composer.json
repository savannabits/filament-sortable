{
    "name": "savannabits/filament-sortable",
    "description": "Sort Items and Move them across Statuses on the board using Sortable.js",
    "keywords": [
        "savannabits",
        "laravel",
        "filament-sortable"
    ],
    "homepage": "https://github.com/savannabits/filament-sortable",
    "license": "MIT",
    "authors": [
        {
            "name": "Sam Maosa",
            "email": "maosa.sam@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "filament/filament": "^2.0",
        "spatie/laravel-package-tools": "^1.13.5",
        "illuminate/contracts": "^9.0"
    },
    "require-dev": {
        "nunomaduro/collision": "^6.0",
        "orchestra/testbench": "^7.0",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.1",
        "pestphp/pest-plugin-livewire": "^1.0",
        "pestphp/pest-plugin-parallel": "^0.3",
        "phpunit/phpunit": "^9.5",
        "spatie/laravel-ray": "^1.26"
    },
    "autoload": {
        "psr-4": {
            "Savannabits\\FilamentSortable\\": "src",
            "Savannabits\\FilamentSortable\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Savannabits\\FilamentSortable\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test:pest": "vendor/bin/pest --parallel",
        "test": [
            "@test:pest",
            "@test:phpstan"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Savannabits\\FilamentSortable\\FilamentSortableServiceProvider"
            ],
            "aliases": {
                "FilamentSortable": "Savannabits\\FilamentSortable\\Facades\\FilamentSortable"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}